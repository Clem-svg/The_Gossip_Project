<div class="card gossip-card" style="width: auto;">
  <div class="card-body">
    <h4>Commentaire by <%= @comment.user.first_name + " " + @comment.user.last_name %></h4>
    <hr/>
    <p><%= comment.content %></p>
    <div class="d-flex">
    <button class="btn btn-outline-info mx-auto">
    <% if is_author(comment.user)%>
      <%= link_to "Editer le comm'", edit_gossip_comment_path(@gossip.id, comment.id)%>
    <%end%>  
    </button>
    </div>
  </div>
</div>