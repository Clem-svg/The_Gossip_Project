<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %> alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= value %>
   </div>
<% end %>

<div class="mx-auto pt-4" style="width: 400px">
  <!-- Default form login -->
  <%= form_tag url_for(action: 'create'), method: "post", class: "text-center border border-light p-5" do %>
    <p class="h4 mb-4">Se connecter</p>

    <!-- Email -->
    <%= text_field_tag 'email', nil, type: "email", id: "defaultLoginFormEmail", class: "form-control mb-4", placeholder: "E-mail" %>

    <!-- Password -->
    <%= password_field_tag 'password', nil, type: "password", id: "defaultLoginFormPassword", class: "form-control mb-4", placeholder: "Password" %>

    <!-- Sign in button -->
    <%= submit_tag "Se connecter", class: "btn btn-info btn-block my-4", type: "submit" %>

    <!-- Register -->
    <p>Pas encore enregistr√© ?
        <%= link_to 'Par ici', new_user_path %>
    </p>
  <% end %>
</div>